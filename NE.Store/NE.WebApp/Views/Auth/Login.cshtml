@model NE.Application.Dtos.AuthDto.LoginDto
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml"; // layout admin riêng
    ViewData["Title"] = "Đăng nhập";
}


<div class="w-75 text-center">
    <!-- Logo nằm trên -->
    <a href="@Url.Action("GetAllProductPages", "Product")"><img src="~/NEStore/img/logo5.png" alt="Logo" class="d-block mx-auto mb-3" style="max-width: 150px; height: auto;"> </a>

    <!-- Form đăng nhập -->
    <h3 class="mb-4">Đăng nhập</h3>
    <form id="loginForm" method="post" asp-action="Login" asp-controller="Auth">
        <div class="mb-3 text-start">
            <label for="email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Nhập email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3 text-start">
            <label for="password" class="form-label">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check text-start">
            <input type="checkbox" class="form-check-input" id="remember">
            <label class="form-check-label" for="remember">Nhớ mật khẩu</label>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <button type="submit" class="btn w-100" style="background-color: #7fad39; color: white">Đăng nhập</button>
    </form>

    <!-- Link bên dưới -->
    <div class="mt-3">
        <a href="@Url.Action("Register", "Auth")" style="color:#7fad39">Đăng ký</a> |
        <a style="color:#7fad39" href="#">Quên mật khẩu?</a>
    </div>
</div>
