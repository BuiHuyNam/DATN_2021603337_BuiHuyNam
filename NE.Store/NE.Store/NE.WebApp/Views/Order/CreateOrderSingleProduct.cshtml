  @model NE.Application.Dtos.OrderDetailDto.OrderDetailViewDto

@{
    Layout = "~/Views/Shared/_LayoutSub.cshtml";
    ViewData["Title"] = "Đơn hàng";
}

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        @* <div class="row"> *@
        @*     <div class="col-lg-12"> *@
        @*         <h6> *@
        @*             <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code *@
        @*         </h6> *@
        @*     </div> *@
        @* </div> *@
        <div class="checkout__form">
            <h4>Thông tin đặt hàng</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <p>Họ và tên<span>*</span></p>
                            <input type="text" name="fullName" required>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="checkout__input">
                                    <p>Tỉnh/Thành phố<span>*</span></p>
                                    <select id="province" name="provinceName" required class="form-control">
                                        <option value="">-- Chọn tỉnh/thành phố --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="checkout__input">
                                    <p>Quận/Huyện<span>*</span></p>
                                    <select id="district" name="districtName" required class="form-control" disabled>
                                        <option value="">-- Chọn quận/huyện --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="checkout__input">
                                    <p>Phường/Xã<span>*</span></p>
                                    <select id="ward" name="wardName" required class="form-control" disabled>
                                        <option value="">-- Chọn phường/xã --</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="checkout__input mt-4">
                            <p>Địa chỉ chi tiết<span>*</span></p>
                            <input type="text" name="detailedAddress" required placeholder="Số nhà, tên đường...">
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Số điện thoại<span>*</span></p>
                                    <input type="text" name="phone" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" name="email" required>
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Ghi chú</p>
                            <input type="text" name="note" placeholder="Ghi chú cho đơn hàng (nếu có)">
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">Sản phẩm</div>
                            <ul>
                                <li>@Model.Product.ProductName</li>
                               
                            </ul>
                            <div class="checkout__order__products">Giá <span>@Model.Price.ToString("N0") ₫</span></div>

                            <div class="checkout__order__products">Số lượng <span> @Model.Quantity</span></div>

                            <div class="checkout__order__subtotal">Tổng <span> @Model.TotalMoney.ToString("N0") ₫</span></div>
                            <div class="checkout__order__total">Tổng <span> @Model.TotalMoney.ToString("N0") ₫</span></div>
                            
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Thanh toán khi nhận hàng
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    VNPay
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">THANH TOÁN</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
@section Scripts {
    <script>
               $(document).ready(function () {
            let allDistricts = [];
            let allWards = [];

            // Vô hiệu hóa district và ward ban đầu
            $('#district').prop('disabled', true);
            $('#ward').prop('disabled', true);

            // Load tỉnh
            $.ajax({
                url: "https://localhost:7099/api/Province",
                method: "GET",
                success: function (data) {
                    $('#province').append(
                        data.map(p => `<option value="${p.id}">${p.provinceName}</option>`)
                    );
                    $('#province').niceSelect('destroy');
                }
            });

            // Load toàn bộ quận
            $.ajax({
                url: "https://localhost:7099/api/District",
                method: "GET",
                success: function (data) {
                    allDistricts = data;
                }
            });

            // Load toàn bộ xã
            $.ajax({
                url: "https://localhost:7099/api/Ward",
                method: "GET",
                success: function (data) {
                    allWards = data;
                }
            });

            // Khi chọn tỉnh
            $('#province').on('change', function () {
                const provinceId = parseInt($(this).val());

                const filteredDistricts = allDistricts.filter(d => d.provinceId === provinceId);

                $('#district').html('<option value="">-- Chọn quận/huyện --</option>');
                $('#ward').html('<option value="">-- Chọn phường/xã --</option>');

                if (!provinceId || filteredDistricts.length === 0) {
                    $('#district').prop('disabled', true);
                    $('#ward').prop('disabled', true);
                    return;
                }

                filteredDistricts.forEach(d =>
                    $('#district').append(`<option value="${d.id}">${d.districtName}</option>`)
                );
                $('#district').prop('disabled', false).niceSelect('destroy');
                $('#ward').prop('disabled', true);
            });

            // Khi chọn quận
            $('#district').on('change', function () {
                const districtId = parseInt($(this).val());

                const filteredWards = allWards.filter(w => w.districtId === districtId);

                $('#ward').html('<option value="">-- Chọn phường/xã --</option>');

                if (!districtId || filteredWards.length === 0) {
                    $('#ward').prop('disabled', true);
                    return;
                }

                filteredWards.forEach(w =>
                    $('#ward').append(`<option value="${w.id}">${w.wardName}</option>`)
                );
                $('#ward').prop('disabled', false).niceSelect('destroy');
            });
        });

    </script>
}
