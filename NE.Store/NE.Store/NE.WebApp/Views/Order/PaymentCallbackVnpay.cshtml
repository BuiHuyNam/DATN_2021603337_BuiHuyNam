@model NE.Application.Dtos.VNPay.PaymentResponseModel

@{
    Layout = "~/Views/Shared/_LayoutPayment.cshtml";
    ViewData["Title"] = "Thanh Toán ";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center">
                    @if (Model.VnPayResponseCode == "00")
                    {
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 10.03a.75.75 0 0 0 1.07 0l3.992-3.993a.75.75 0 0 0-1.06-1.06L7.5 8.439 5.53 6.47a.75.75 0 1 0-1.06 1.06l2.5 2.5z" />
                            </svg>
                        </div>
                        <h2 class="card-title mb-3 text-success">Thanh Toán Thành Công!</h2>
                        <p class="card-text mb-4">@Model.OrderDescription đồng!</p>

                        <ul class="list-group mb-4 text-start">
                            <li class="list-group-item"><strong>Mã giao dịch:</strong> @Model.TransactionId</li>
                            @* <li class="list-group-item"><strong>Số tiền:</strong> @Model.Amount.ToString("N0") VND</li> *@
                            @* <li class="list-group-item"><strong>Ngày thanh toán:</strong> @Model.PayDate.ToString("dd/MM/yyyy HH:mm")</li> *@
                            <li class="list-group-item"><strong>Ngân hàng:</strong> @Model.PaymentMethod</li>
                        </ul>
                    }
                    else
                    {
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </div>
                        <h2 class="card-title mb-3 text-danger">Thanh Toán Thất Bại</h2>
                        <p class="card-text mb-4">Đã xảy ra lỗi trong quá trình xử lý giao dịch. Vui lòng thử lại hoặc liên hệ hỗ trợ.</p>

                        <ul class="list-group mb-4 text-start">
                            <li class="list-group-item"><strong>Mã lỗi:</strong> @Model.TransactionId</li>
                            @* <li class="list-group-item"><strong>Mô tả lỗi:</strong> @Model.ErrorMessage</li> *@
                            <li class="list-group-item"><strong>Ngân hàng:</strong> VNPay</li>
                        </ul>
                    }

                    

                        <a href="@Url.Action("GetAllProductPages", "Product")" class="btn btn-success">Quay về trang chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
