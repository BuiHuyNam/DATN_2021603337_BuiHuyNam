@model NE.Application.Dtos.CouponDto.CouponCreateDto

@{
    ViewData["Title"] = "AddCoupon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Thêm mã giảm giá</h4>
        </div>
        <div class="card-body">
            <form id="couponForm" method="post">
                <div class="mb-3">
                    <label for="code" class="form-label">Mã giảm giá:</label>
                    <input asp-for="Code" type="text" class="form-control" id="code" placeholder="Nhập mã giảm giá..." required />
                </div>

                <div class="mb-3">
                    <label for="discount" class="form-label">Phần trăm giảm giá (%):</label>
                    <input asp-for="Discount" type="number" step="0.01" class="form-control" id="discount" placeholder="Nhập phần trăm giảm giá..." required />
                </div>

                <div class="mb-3">
                    <label for="useDate" class="form-label">Ngày áp dụng:</label>
                    <input asp-for="UseDate" type="date" class="form-control" id="useDate" required />
                </div>

                <div class="mb-3">
                    <label for="expiryDate" class="form-label">Ngày hết hạn:</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" id="expiryDate" required />
                </div>

                <div class="mb-3">
                    <label for="quantity" class="form-label">Số lượng:</label>
                    <input asp-for="Quantity" type="number" class="form-control" id="quantity" placeholder="Nhập số lượng..." required />
                </div>

                <button type="submit" class="btn btn-success">Thêm</button>
                @Html.ActionLink("Hủy", "Index", "Coupon", null, new { @class = "btn btn-secondary ms-2" })
            </form>
        </div>
    </div>
</div>
