@model NE.Application.Dtos.ProductDto.ProductUpdateDto


@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Chỉnh sửa sản phẩm</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Giá</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Discount" class="form-label">Giảm giá (%)</label>
                    <input asp-for="Discount" type="number" step="0.01" class="form-control" placeholder="Nhập giảm giá.." required />
                </div>


                <div class="mb-3">
                    <label asp-for="BrandId" class="form-label">Thương hiệu: </label>
                    <select asp-for="BrandId" name="BrandId" class="form-select">
                        @foreach (var item in ViewBag.brand)
                        {
                            <option value="@item.Id">@item.BrandName</option>
                        }
                    </select>

                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold">Danh mục:</label>
                    <select asp-for="CategoryId" name="CategoryId" class="form-select">
                        @foreach (var item in ViewBag.category)
                        {
                            <option value="@item.Id">@item.CategoryName</option>
                        }
                    </select>

                </div>

               



                @* <div class="mb-3">  *@
                @*     <label asp-for="ImageFile" class="form-label">Ảnh sản phẩm</label>  *@
                @*     <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />  *@
                @* </div>  *@

                <button type="submit" class="btn btn-success">Cập nhập</button>
                @Html.ActionLink("Hủy", "Index", "Product", null, new { @class = "btn btn-secondary ms-2" })
            </form>
        </div>
    </div>
</div>
