@model NE.Application.Dtos.ProductDto.ProductCreateDto


@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Thêm sản phẩm</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Giá</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="BrandId" class="form-label">Thương hiệu</label>
                    <select asp-for="BrandId" name="BrandId" class="form-select">
                        @await Component.InvokeAsync("Brand")
                    </select>

                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold">Danh mục:</label>
                    <select asp-for="CategoryId" name="CategoryId" class="form-select">
                        @await Component.InvokeAsync("Category")
                    </select>

                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Số lượng</label>
                    <input asp-for="Quantity" type="number" step="1" class="form-control" placeholder="Nhập số lượng" required />
                </div>

             

                 <div class="mb-3"> 
                     <label asp-for="ColorId" class="form-label">Màu sắc</label> 
                     <select asp-for="ColorId" asp-items="ViewBag.ColorList" class="form-select">
                        @await Component.InvokeAsync("Color")

                     </select> 
                 </div> 

                 @* <div class="mb-3">  *@
                 @*     <label asp-for="ImageFile" class="form-label">Ảnh sản phẩm</label>  *@
                 @*     <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />  *@
                 @* </div>  *@

                <button type="submit" class="btn btn-success">Thêm</button>
                @Html.ActionLink("Hủy", "Index", "Product", null, new { @class = "btn btn-secondary ms-2" })
            </form>
        </div>
    </div>
</div>
