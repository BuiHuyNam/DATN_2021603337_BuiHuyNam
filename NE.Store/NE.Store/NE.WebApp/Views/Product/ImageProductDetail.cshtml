@model NE.Application.Dtos.ProductDto.ProductViewDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết hình ảnh sản phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Thông Tin chi tiết hình ảnh sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm:</label>
                        <span id="productName">@Model.ProductName</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên danh mục:</label>
                        <span id="category">@Model.Category.CategoryName</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên thương hiệu:</label>
                        <span id="brand">@Model.Brand.BrandName</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Giá bán:</label>
                        <span id="price">@Model.Price</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Lượt xem:</label>
                        <span id="view">@Model.View</span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Biến thể sản phẩm:</label>
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Ảnh sản phẩm</th>
                                    <th>Màu sắc</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var variant in Model.ProductColors) // Lặp qua các biến thể sản phẩm
                                {
                                    <tr>
                                        <td>
                                            @if (variant.ImageFiles != null && variant.ImageFiles.Count > 0)
                                            {
                                                // Lặp qua các ảnh của biến thể và hiển thị chúng
                                                @foreach (var image in variant.ImageFiles)
                                                {
                                                    <img src="https://localhost:7099/api/ImageFile/Download?id=@image.Id" width="60" height="60" class="m-1" />
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không có ảnh</span>
                                            }
                                        </td>
                                        <td>@variant.Color.ColorName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" onclick="window.location='@Url.Action("ImageProduct", "Product")'">Quay Lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
