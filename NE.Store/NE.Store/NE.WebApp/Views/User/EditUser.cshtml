@model NE.Application.Dtos.UserDto.UserViewDto

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Chỉnh sửa thông tin người dùng</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" asp-controller="User" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AddressDetail"  value="@Model.AddressDetail"/>
                <input type="hidden" asp-for="WardId" value="@Model.WardId" />



                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" required disabled/>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" required />
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>

                @* <div class="mb-3"> *@
                @*     <label asp-for="AddressDetail" class="form-label">Địa chỉ chi tiết</label> *@
                @*     <input asp-for="AddressDetail" class="form-control" placeholder="Nhập địa chỉ..." /> *@
                @* </div> *@

              

                <button type="submit" class="btn btn-success">Cập nhật</button>
                @Html.ActionLink("Hủy", "Index", "User", null, new { @class = "btn btn-secondary ms-2" })
            </form>
        </div>
    </div>
</div>
